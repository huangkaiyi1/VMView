<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3>Delete VM</h3>
		</div>
		<div class="modal-body">
			<ul class="errors"></ul>
			Are you sure you wish to delete <b><%= @vm.hostname %></b>?
		</div>
		<div class="modal-footer">
			<%= link_to "Yes", virtual_machine_path(@vm), method: :delete, remote: true, class: "btn btn-danger" %>
			<%= link_to "No", "#", class: "btn", data: { dismiss: "modal" } %>
		</div>
	</div>
</div>